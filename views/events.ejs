<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
	<script src="/javascripts/jquery-3.3.1.min.js"></script>
  </head>
  <body>
    <div class="Container">
		<h1>Мероприятия</h1>
		<% if(userLogin){ %>
			<div>
				<div class="row">
					<div class="divLoginName"><strong><%= userLogin %></strong></div>
					<div class="divExitCmd"><strong><a href="/exit">Выйти</a></strong></div>
				</div>
				<br />
				<div id="workArea" class="row">
					<% if(eventsList) { %>
						<% eventsList.forEach(function(eventRow) { %>
						<div class="col-sm-6 col-md-3">
							<div class="thumbnail">
								<a href="/event/<%= eventRow.ID %>">
									<img src="./images/events/<%= eventRow.ImgPath %>" width="250px" height="350px" alt="<%= eventRow.Name %>" />
								</a>
								<div class="caption">
									<h3><%= eventRow.Name %></h3>
									<p><strong>Дата и время:</strong> <%= eventRow.Name %></p>
									<p><strong>Место:</strong> <%= eventRow.Name %></p>
								</div>
							</div>
						</div>
						<% }); %>
					<% } %>
				</div>
			</div>
		<% } else{ %>
			<form action="/events" method="post">
				<div class="form-group">
					<label for="txLogin">Логин</label>
					<input type="text" class="form-control" name="txLogin" id="txLogin" placeholder="Логин" />
				</div>
				<div class="form-group">
					<label for="txPassword">Пароль</label>
					<input type="password" class="form-control" name="txPassword" id="txPassword" placeholder="Пароль" />
				</div>
				<button type="submit" id="btnLogin" class="btn btn-primary">Войти</button>
			</form>
		<% } %>
	</div>
  </body>
</html>
