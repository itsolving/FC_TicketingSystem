<div class="content">
	<div class="container col-md-4">
		<div class="row">
			<div class="card">
				<div class="card-header card-header-primary">
					<h4 class="card-title">Авторизация</h4>
				</div>
				<div class="card-body">
					<form action="/login" method="post">
						<div class="row">
							<div class="col-md-12">
								<div class="form-group bmd-form-group">
									<label for="txLogin" class="bmd-label-floating">Логин</label>
									<input type="text" class="form-control" name="txLogin" id="txLogin" placeholder="Логин">
								</div>
							</div>
							<div class="col-md-12">
								<div class="form-group bmd-form-group">
									<label for="txPassword" class="bmd-label-floating">Пароль</label>
									<input type="password" class="form-control" name="txPassword" id="txPassword" placeholder="Пароль">
								</div>
							</div>
							<div class="col-md-12">
								<button type="submit" id="btnLogin" class="btn btn-primary">Войти</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
